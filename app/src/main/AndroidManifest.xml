<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ryey.easeroperationpluginexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <receiver
            android:name=".PluginInfoReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="ryey.easer.remote_plugin.action.REQUEST.PLUGIN_INFO" />
                <action android:name="ryey.easer.remote_plugin.TYPE.OPERATION" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".EditDataActivity"
            android:exported="true" />

        <receiver
            android:name=".TriggerOperationReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="ryey.easer.remote_plugin.action.TRIGGER_ACTION" />
            </intent-filter>
        </receiver>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>